<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_10">

    <ImageView
        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_50"
        android:layout_gravity="bottom"
        android:src="@mipmap/phone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tran_phone"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itp_iv_goTTS"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/tts_voice_playing3"/>

        <TextView
            android:id="@+id/itp_tv_src"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/itp_iv_goTTS"
            android:textSize="@dimen/text_16"
            android:textColor="#5acba8"/>

        <TextView
            android:id="@+id/itp_tv_dst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/itp_iv_goTTS"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/itp_tv_src"
            android:layout_marginTop="@dimen/margin_5"
            android:textSize="@dimen/text_16"
            android:textColor="@color/colorBlack" />


    </RelativeLayout>

</LinearLayout>
